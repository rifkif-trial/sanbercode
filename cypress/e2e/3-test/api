describe('Authorization API Test', () => {
    it('Single User', () => {
        cy.request({
            method: 'GET',
            url: 'https://reqres.in/api/users/2',
            headers: {
                'x-api-key': 'reqres_62417298abd943b89555ddf97f451142'
            }
        }).then((response) => {
            expect(response.status).to.eq(200)
            expect(response.body).to.have.property('data')
        })
    })
    it('Create Record', () => {
        cy.request({
            method: 'POST',
            url: 'https://reqres.in/api/users',
            body: {
                name: "dudu",
                job: "qa tester"
            },
            headers: {
                'x-api-key': 'reqres_62417298abd943b89555ddf97f451142'
            }
        }).then((response) => {
            expect(response.status).to.eq(201)
            expect(response.body).to.have.property('name', 'dudu')
            expect(response.body).to.have.property('job', 'qa tester')
        })
    })
    it('Update', () => {
        cy.request({
            method: 'PUT',
            url: 'https://reqres.in/api/users/2',
            body: {
                name: "dudu",
                job: "qa tester"
            },
            headers: {
                'x-api-key': 'reqres_62417298abd943b89555ddf97f451142'
            }
        }).then((response) => {
            expect(response.status).to.eq(200)
            expect(response.body.name).to.eq('dudu')
            expect(response.body.job).to.eq('qa tester')
        })
    })
})
